{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"files": {
    "ignore": [
      "CHANGELOG.md",
      "pnpm-lock.yaml",
      "tsconfig.json",
      "tsconfig.*.json",
			"coverage",
			".next",
			"dist",
			"*-app",
			"examples/*",
			"build",
			"generated-test-app",
			".contentlayer"
    ]
  },
	"formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
	"linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "nursery": {
        "noBannedTypes": "off",
        "useExhaustiveDependencies": "error",
        "useGroupedTypeImport": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useShorthandArrayType": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noRedeclare": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
